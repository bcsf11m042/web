<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title> Sign In </title>

    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Script/bootstrap.js"></script>

</head>
<body>
    <br />
    <div class="row">
        <div class="col-md-2"></div>
        
        <div class ="col-xs-8">            
                <div>
                    <a href="@Url.Action("index", "Home")">
                        <img src="@Url.Content("~/Content/icon.100x100-75.jpg")" />
                    </a>
                    <b> Pakistan's Largest MarketPlace </b>
            
                 
                     <a style="color:blue  ; margin-top:34px ; margin-left:340px " >
                         <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  My Account 

                     </a>
                            &nbsp &nbsp
                     <a style="color:orange ; float:right ; margin-top:36px"> 
                         <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Submit an Add 
                     </a> 
                     <br />
                </div>
            <hr />
        </div>
    </div>
        <div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                       
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                            
                        <form id="loginform" class="form-horizontal" role="form" action="/Home/loginCheck" method="post">
                                    
                            <div style="margin-bottom: 25px" class="input-group">
                               
                                        <span class="input-group-addon" aria-hidden="true"><i class="glyphicon glyphicon-user" ></i></span>

                                        <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="Username"/>                                        
                                    </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input id="login-password" type="password" class="form-control" name="password" placeholder="Password"/>
                                    </div>     
                             <div font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>


                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls">
                                        @*<a href="/Home/account">
                                            <div  class="btn btn-default" style="background-color:green; color:white"> 
                                                Login
                                            </div>*@
                                            <div  style="margin-bottom: 15px ; float:right" class="col-md-3 control-label">
                                                 <input id="btn-signin" type="submit" class="btn btn-info" value="Sign In"/>
                                            </div>   
                                       @* </a>*@
                                        &nbsp&nbsp&nbsp&nbsp

                                        <a href="/Home/signUp">
                                            <div class="btn btn-default" style="background-color:orange; color:white"> 
                                                Sign Up
                                            </div>
                                        </a>
                                    </div>
                                </div>  
                            </form>     
                        </div>                     
                    </div>  
            </div>
        </div>

    <hr />


    <script>

        $(document).ready(function () {

            $('#btn-login').click(function () {

                if (($('#login-username').val().trim() == "haroon") && $('#login-password').val().trim() == "1234") {

                    //$('#login-username').val("OK");
                    var home = "Home.html";
                    $(location).attr('href', home);

                }
                else {
                    var wrongentry = "signin_wrong.html";
                    $(location).attr('href', wrongentry);

                }

            })
        })

    </script>
</body>
</html>
